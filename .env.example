# ============= MULTI-TENANT CONFIGURATION =============
# Master Database (tracks all tenants, subscriptions, payments)
# This is a separate database from tenant databases
MASTER_DATABASE_URL="postgresql://user:password@localhost:5432/cafemate_master?schema=public"

# PostgreSQL Admin Connection (for creating tenant databases)
# Requires superuser privileges to create databases and users
POSTGRES_ADMIN_URL="postgresql://postgres:password@localhost:5432/postgres"

# Database Host for Tenant Databases
# Each tenant gets their own database on this host
DB_HOST="localhost"

# Database Encryption Key (REQUIRED for production)
# Generate with: openssl rand -base64 32
# Must be exactly 32 bytes (256 bits) for AES-256 encryption
DB_ENCRYPTION_KEY="your-encryption-key-here-generate-with-openssl-rand-base64-32"

# Super Admin Domain
# The subdomain where super admin dashboard is accessible
# Development: admin.localhost:3000
# Production: admin.mycafemate.com
SUPER_ADMIN_DOMAIN="admin.localhost"

# ============= TENANT DATABASE (Development Only) =============
# For development/testing with a single tenant database
# In production, each tenant gets their own DATABASE_URL dynamically
DATABASE_URL="postgresql://user:password@localhost:5432/cafemate_tenant_dev?schema=public"

# ============= NEXTAUTH CONFIGURATION =============
# IMPORTANT: Generate a strong secret for production using: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-here-generate-with-openssl-rand-base64-32"
# For production, set this to your actual domain (e.g., https://yourdomain.com)
NEXTAUTH_URL="http://localhost:3000"

# ============= APPLICATION CONFIGURATION =============
# For production, set this to your actual domain
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="Cafe Management System"

# ============= CRON JOB SECURITY =============
# IMPORTANT: Generate a secure secret for production
CRON_SECRET="cron_dev_secret_change_in_production"
# Legacy - some endpoints use CRON_API_KEY
# CRON_API_KEY="your-random-api-key-here"

# ============= OPTIONAL CONFIGURATION =============
# Node Environment
# NODE_ENV="production"

